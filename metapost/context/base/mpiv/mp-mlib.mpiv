vardef installlabel@# (expr type, x, y, offset) =
    numeric mfun_labtype@# ; mfun_labtype@# := type ;
    pair    mfun_laboff @# ; mfun_laboff @# := offset ;
    numeric mfun_labxf  @# ; mfun_labxf  @# := x ;
    numeric mfun_labyf  @# ; mfun_labyf  @# := y ;
enddef ;

