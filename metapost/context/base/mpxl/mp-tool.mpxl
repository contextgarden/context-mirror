                contour pathpart i
                withpen penpart i
                withcolor colorpart i
                withprescript prescriptpart i
                withpostscript postscriptpart i
                decoration
            elseif textual i :
                also i
                withcolor colorpart i
                withprescript prescriptpart i
                withpostscript postscriptpart i
                decoration
            else :
                also i
            fi
        ;
    endfor ;
    currentpicture
enddef ;

