def mfun_draw_controllines text t =
    for i=0 upto length(temp_c) :
        normaldraw point i of temp_c -- precontrol  i of temp_c mfun_opt_lin t ;
        normaldraw point i of temp_c -- postcontrol i of temp_c mfun_opt_lin t ;
