def mfun_draw_controlpoints text t =
    for i=0 upto length(temp_c) :
        normaldraw precontrol  i of temp_c mfun_opt_ctr t ;
        normaldraw postcontrol i of temp_c mfun_opt_ctr t ;
    endfor ;
