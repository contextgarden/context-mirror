    close    = "focus", -- click page focus
\stopluaparameterset

\startluaparameterset [swf:myset:resources:1]
    paths = {
        "assets"
    },
    files = {
        -- "somename_1"
        -- "somename_1"
    }
\stopluaparameterset

\startluaparameterset [swf:dolikemelater:resources]
    paths    = {
        "assets"
    },
\stopluaparameterset

