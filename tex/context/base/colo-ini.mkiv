           \colo_helpers_set_model\s!gray
         \else
           \colo_helpers_set_model\s!none
         \fi
       \fi
     \fi
   \else
     \ifconditional\c_colo_convert_gray
       \colo_helpers_set_model\s!gray
     \else
       \colo_helpers_set_model\s!none
     \fi
   \fi}

