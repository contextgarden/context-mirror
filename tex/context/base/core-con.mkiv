\def\greeknumerals#1{\ctxlua{convert.alphabetic(\number#1,"gr")}}
\def\Greeknumerals#1{\ctxlua{convert.Alphabetic(\number#1,"gr")}}

\def\character #1{\ctxlua{convert.character (\number#1)}}
