        \letvalueempty{\@size@\tempbodyfontsize}% prevent loop
        \pushmacro\fontclass
        \edef\fontclass{#1}%
        \normalexpanded{\defineunknownfont{\tempbodyfontsize}}% we can also inherit here
        \popmacro\fontclass
      \fi
