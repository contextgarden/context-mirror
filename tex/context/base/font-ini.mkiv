\def\checkmathbodyfont#1#2#3% style alt size / gdef % #3 can be empty
  {%\message{!m #1 #2 #3!}%
   % #1 #2 #3 = signal
   %setugvalue     {#2}{\setcurrentfontalternative         {#2}}%         \mr \mb
