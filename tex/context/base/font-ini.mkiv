\let\thedefinedfont\relax

\def\symbolicsizedfont#1#2#3%
  {\scaledfontsize#1%
   \scaledfontsize#2\scaledfontsize
   \font\thedefinedfont=\truefontname{\glyphfontfile{#3}} at \currentfontbodyscale\scaledfontsize\relax
   \thedefinedfont}

