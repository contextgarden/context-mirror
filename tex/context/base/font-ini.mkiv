\def\dodefinefontvariant[#1][#2][#3]%
  {\setvalue{\??fv#1#2}{#3}}

\def\fontvariant#1#2{\executeifdefined{\??fv#1#2}\empty}

\def\dosetscaledfont
  {\checkrelativefontsize\fontstyle
   \scaledfontsize\currentfontscale\bodyfontsize
