  {\edef\m_syst_string_one{\begincsname\??variables#1:#2\endcsname}%
   \ifx\m_syst_string_one\empty
     \expandafter\firstoftwoarguments
   \else
     \expandafter\secondoftwoarguments
   \fi}

\let\doifemptyvariableelse\doifelseemptyvariable

