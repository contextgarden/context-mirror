        {\setfalse\fontattributeisset
         \uselayeredtextstyleparameter\c!style
         \ifconditional\fontattributeisset
           \setupinterlinespace
         \fi
         \inheritedlayeredtextframed{#3}}%
      \endgroup
      \placeframed[\??layeredtextframed]{\flushnextbox}%
      \egroup}%
     \hbox}

