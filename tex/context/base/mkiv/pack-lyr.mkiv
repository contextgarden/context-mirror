\def\pack_layers_reset_box#1%
  {\ifcsname\??layerbox#1\endcsname
    %\global\setbox\csname\??layerbox#1\endcsname\emptybox
     \global\setbox\lastnamedcs\emptybox
   \fi}

\def\resetlayer[#1]%
  {\pack_layers_reset_box{#1}%
