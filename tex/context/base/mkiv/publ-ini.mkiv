\def\publ_use_dataset[#1][#2][#3]%
  {\getdummyparameters[\c!specification=\currentbtxspecification,#3]%
   \ifsecondargument
     \clf_btxusedataset
        specification {\dummyparameter\c!specification}%
        dataset       {#1}%
        filename      {#2}%
     \relax
   \else\iffirstargument
     \clf_btxusedataset
        specification {\dummyparameter\c!specification}%
        dataset       {\v!default}%
        filename      {#1}%
     \relax
   \fi\fi
   \endgroup}

