       \fi}

    \def\syst_helpers_do_do_process_comma_item_indeed
      {\ifx\nexttoken]%
         \expandafter\gobbleoneargument
       \else
         \expandafter\syst_helpers_do_do_do_process_comma_item
       \fi}

