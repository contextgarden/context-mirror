     \glet\tabl_table_tail\empty
   \stoptablenoalign
   \tabl_table_finish
   \ifx\p_tabl_table_frame\empty
     \ifinsidefloat\else
        \stopbaselinecorrection
        \goodbreak % compensates all the nobreaks
     \fi
   \else
     \stopframedcontent
   \fi
   \egroup}

