\permanent\protected\def\colo_helpers_activate#1% two-step is not that much faster but less tracing
  {\edef\currentcolorname{#1}%
   \ifempty\currentcolorprefix
     \colo_helpers_activate_nop
   \else
     \colo_helpers_activate_yes
   \fi}

