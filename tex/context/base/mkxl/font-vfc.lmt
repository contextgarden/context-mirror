    end),

    outlines = setmetatableindex(function(t,h)
        local v = setmetatableindex(function(t,d)
            local v = setmetatableindex(function(t,w)
                local v = { "frame", w, h, d, defaultline, false, true }
                t[w] = v
                return v
            end)
            t[d] = v
            return v
        end)
        t[h] = v
