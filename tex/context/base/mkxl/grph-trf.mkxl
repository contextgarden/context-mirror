     \dp\nextbox\d_grph_rotate_saved_depth
   \else
     \wd\nextbox\d_grph_rotate_new_width
     \ht\nextbox\d_grph_rotate_new_height
     \dp\nextbox\d_grph_rotate_new_depth
   \fi
   %
   \boxcursor\box\nextbox}

