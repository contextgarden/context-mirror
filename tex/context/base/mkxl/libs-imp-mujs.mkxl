\stopecmacode

\startecmacode
    console("Example Four!");
    texsprint("\\startMPcode "
      .concat('  fill fullcircle scaled 6cm withcolor "darkred";')
      .concat('  fill fullcircle scaled 4cm withcolor "darkgreen";')
      .concat('  fill fullcircle scaled 2cm withcolor "darkblue";')
      .concat("\\stopMPcode ")
