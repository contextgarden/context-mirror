        if attr then
            local widths = { }
            local data   = { }
            local rows   = 0
            local cols   = 0
            for col in nextrecord, preamble do
                cols = cols + 1
                local w, s = getwidth(col,true)
                widths[cols] = { col, w, s }
            end
            --
            for row in nextunset, head do
                rows = rows + 1
                local c = 0
                local d = { }
                data[rows] = d
                for col in nextunset, getlist(row) do
                    c = c + 1
                    if widths[c][2] then
                        local list = getlist(col)
                     -- if method == 1 then
                     --     local left   = nil
