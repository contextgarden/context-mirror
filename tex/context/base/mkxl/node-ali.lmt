                     -- elseif method == 2 then
                            local middle = nil
                            -- we can either cache unislots or we can cache for this font
                            for g, char, font in nextglyph, list do
                                local unicode = getattr(g,a_alignchar)
                                if unicode then
                                    if char == unicode then
