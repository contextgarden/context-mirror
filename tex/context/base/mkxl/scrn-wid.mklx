         \c!depth=\dp\b_scrn_attachment_link]%
     \kern-\wd\b_scrn_attachment_link
     \box\b_scrn_attachment_link
   \egroup}

\protected\def\scrn_attachment_flush_normal
  {\box\b_scrn_attachment_link}

