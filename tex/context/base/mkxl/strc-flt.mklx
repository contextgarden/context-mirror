     \ht\scratchboxone\d_strc_float_temp_height
     \everyrightofalignedline{\hsmash{\hskip#1\box\scratchboxone}}%
     \strc_floats_align_content{\box\b_strc_floats_content}%
     \endgroup
    \fi}

