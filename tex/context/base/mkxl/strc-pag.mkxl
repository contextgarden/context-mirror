  {\edef\m_strc_pagenumbers_state_new{\namedcounterparameter#1\c!state}%
   \ifx\m_strc_pagenumbers_state_new\m_strc_pagenumbers_state_old \else
     #2\ifx\m_strc_pagenumbers_state_new\v!start\plustwo\else\zerocount\fi
   \fi}

