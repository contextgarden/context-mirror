function texio.terminal()
    writenl("\n" .. "entering interactive mode, use \\quit to abort reading" .."\n\n")
    while true do
        write(">")
        ioflush()
        terminaldata = ioread()
        if terminaldata == "\\quit" then
            terminaldata = false
            break
        else
            runlocal("t_syst_terminal_data",nil,nil,true) -- obeymode
        end
    end
end

