\def\doshowparentchain#1%
  {#1 => %
   \ifcsname#1\s!parent\endcsname
      \expandafter\doshowparentchain\csname#1\s!parent\endcsname
   \fi}

\def\showparentchain#1#2%
  {\writestatus\m!system{chain: [ \doshowparentchain{#1#2}]}}

