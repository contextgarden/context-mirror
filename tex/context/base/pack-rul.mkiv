%D \type{\leaders}, but this would probably have taken more
%D tokens.

\def\doblackrules[#1]%
  {\hbox\bgroup
   \getparameters[\??bj][#1]%
   \!!widtha\@@bjwidth
   \!!widthb\@@bjdistance
   \doif\@@bjalternative\c!b
     {\scratchcounter\@@bjn
      \ifnum\scratchcounter=\plusone
        \!!widthb\zeropoint
      \else
        \advance\scratchcounter \minusone
        \advance\!!widtha -\scratchcounter\!!widthb
        \divide \!!widtha \@@bjn
      \fi}%
   \startcolor[\@@bjcolor]%
     \dorecurse\@@bjn
       {\vrule
          \!!width \!!widtha
          \!!height\@@bjheight
          \!!depth \@@bjdepth
