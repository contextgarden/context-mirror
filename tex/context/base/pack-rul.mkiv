\def\backgroundline[#1]%
 %{\doifsomething{#1}{\dobackgroundline{#1}}\hbox}
  {\doifcolorelse{#1}{\dobackgroundline{#1}\hbox}\hbox}

% \def\backgroundline[#1]%
%   {\doifcolor{#1}{\dobackgroundline{#1}}\hbox}

\def\dobackgroundline#1%
  {\dowithnextbox
     {\hbox
        {\startcolor[#1]%
         \vrule
           \!!width \nextboxwd
           \!!height\nextboxht
           \!!depth \nextboxdp
       \stopcolor
       \hskip-\nextboxwd
       \flushnextbox}}}

