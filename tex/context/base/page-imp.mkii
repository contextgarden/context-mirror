\def\clippagebox#1%
  {\ifdim\@@lyclipoffset>\zeropoint
     \!!widtha \wd#1%
     \!!heighta\ht#1%
     \!!deptha \dp#1%
     \setbox#1\hbox
       {\!!widthb \@@lyclipoffset
        \advance\!!heighta\dimexpr\!!deptha+2\!!widthb\relax
        \advance\!!widtha \!!widthb
        \doifbothsides
          {\advance\!!widtha\!!widthb \!!widthc-\!!widthb \hskip\!!widthc}%
          {\!!widthc\zeropoint}
          {\!!widthc-\!!widthb \hskip\!!widthc}%
        \lower\!!widthb\hbox
          {\clip
             [\c!hoffset=\!!widthc,
              \c!voffset=-\!!widthb,
                \c!width=\!!widtha,
               \c!height=\!!heighta]%
             {\box#1}}}%
     \wd#1\!!widtha
     \ht#1\!!heighta
     \dp#1\!!deptha
   \fi}

