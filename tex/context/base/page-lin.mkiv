\def\mkaddtextlinenumbers#1#2#3#4% box col max nesting
  {\bgroup
   \linenumberbox       #1\relax
   \linenumbercolumn    #2\relax
   \linenumberlastcolumn#3\relax
   \linenumbernesting   #4\relax
   \fullrestoreglobalbodyfont
