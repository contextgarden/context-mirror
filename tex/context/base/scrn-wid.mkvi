  {\dodoubleempty\scrn_rendering_define_window}

\def\scrn_rendering_define_window[#tag][#settings]%
  {\presetlocalframed[\??rw#tag]%
   \getparameters
     [\??rw#tag]%
     [\c!openpageaction=,\c!closepageaction=,%
      \c!width=\renderingwidth,\c!height=\renderingheight,%
      #settings]}

