   \rightskip  \plusone\rightskip\!!plus\zeropoint
   \spaceskip  \v_spac_align_space_amount
   \xspaceskip \v_spac_align_space_amount_x
   \parfillskip\s_zero_plus_zero
   \parindent  \zeropoint
   \relax}

