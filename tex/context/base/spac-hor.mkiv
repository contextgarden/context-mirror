\unexpanded\def\autoinsertnextspace
  {\futurelet\nexttoken\doautoinsertnextspace}

\def\doautoinsertnextspace
  {\ctxcommand{autonextspace("\meaning\nexttoken")}} % todo, just consult nexttoken at the lua end

