\def\docheckformulareference#1#2%
  {\chardef#1%
   \unless\ifx\namedformulaentry\relax % new 29/8/2010
     \plusthree
   \else\ifx#2\empty
     \zerocount
   \else\ifx#2\forceformulanumberflag
     \plusone
   \else\ifx#2\inhibitformulanumberflag
     \plustwo
   \else
     \plusthree
   \fi\fi\fi\fi}

