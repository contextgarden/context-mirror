\unexpanded\def\placecurrentformulanumber
  {\rm % nodig ?
   \doif{\formulaparameter\c!location}\v!right{\hskip\formulaparameter\c!distance}%
   \formulaparameter\c!numbercommand
     {\dosetformulaattributes\c!numberstyle\c!numbercolor
      \strut
