\setvalue{\v!formula}{\dosingleempty\doformula}

\def\doformula[#1]#2%
  {\begingroup
   \doifsomething{#1}{\switchtoformulabodyfont[#1]}%
   % not : \def\doformula[##1]##2{\mathematics{##2}}%
   \mathematics{#2}%
   \endgroup}

\def\dostopformula
  {\dostarttagged\t!formulatag\empty
