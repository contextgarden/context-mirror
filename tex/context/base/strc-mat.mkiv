  {\dosingleempty\dodoformulanumber}

\def\dodoformulanumber[#1]%
  {\def\currentformulareference{#1}%
   \dosinglegroupempty\dododoformulanumber}

\def\redoformulanumber#1%
  {\def\currentformulasuffix{#1}%
