      \labeltexts\v!formula{\ignorespaces\doplacecurrentformulanumber\unskip}%
      \formulaparameter\c!right}%
   \doif{\formulaparameter\c!location}\v!left{\hskip\formulaparameter\c!distance}}

\def\doplacecurrentformulanumber
