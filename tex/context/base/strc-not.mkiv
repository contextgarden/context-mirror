\def\donotesymbol[#1][#2]%
  {\bgroup
   \ifnotesenabled
     \edef\currentnote{#1}%
     \ifsecondargument
       \unskip
       \dodonotesymbol{\in[#2]}%
     \else
       \dodonotesymbol\lastnotesymbol
     \fi
   \fi
