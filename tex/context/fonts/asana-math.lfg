         -- StretchStackBottomShiftDown      = 0,
         -- StretchStackGapAboveMin          = 0,
         -- StretchStackGapBelowMin          = 0,
         -- StretchStackTopShiftUp           = 0,
            StackBottomDisplayStyleShiftDown = less,
