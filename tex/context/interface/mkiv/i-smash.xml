    <cd:command name="smashedhbox" level="system" category="boxes" file="supp-box.mkiv">
        <cd:arguments>
            <cd:resolve name="string-boxoptions"/>
            <cd:content/>
        </cd:arguments>
    </cd:command>

    <cd:command name="smashedvbox" level="system" category="boxes" file="supp-box.mkiv">
        <cd:arguments>
