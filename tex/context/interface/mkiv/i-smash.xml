        </cd:arguments>
    </cd:command>

    <cd:command name="smash" level="document" category="boxes" file="supp-box.mkiv">
        <cd:arguments>
            <cd:keywords optional="yes">
                <cd:constant type="w"/>
                <cd:constant type="h" default="yes"/>
                <cd:constant type="d" default="yes"/>
