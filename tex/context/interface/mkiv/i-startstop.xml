    <cd:command name="" type="environment" level="document" category="structure" file="core-sys.mkiv">
        <cd:arguments>
            <cd:resolve name="keyword-name-optional"/>
        </cd:arguments>
    </cd:command>

    <cd:command name="startstop" generated="yes" variant="example" level="document" category="structure" file="core-sys.mkiv">
        <cd:sequence>
            <cd:variable value="startstop"/>
        </cd:sequence>
        <cd:arguments>
            <cd:content/>
        </cd:arguments>
    </cd:command>

