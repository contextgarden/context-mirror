        <cd:arguments>
            <cd:keywords list="yes" optional="yes">
                <cd:constant type="continue"/>
            </cd:keywords>
        </cd:arguments>
        <cd:instances>
            <cd:resolve name="instance-typing"/>
        </cd:instances>
    </cd:command>

