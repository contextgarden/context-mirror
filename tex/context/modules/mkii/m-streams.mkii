\def\starttextstreamlayer
  {\startstreamlayer}

\def\stoptextstreamlayer
  {\endgraf
   % maybe depth if no proper depth and no skip
   \removelastskip
   \stopstreamlayer}

\def\placetextstreamlayer{\placestreamlayer}

