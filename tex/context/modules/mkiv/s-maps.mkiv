  style=\hfontii,
  before={\blank[line]},
  after={}%
]
\setuphead [subsection][%
  style=\hfontiii,
  alternative=text,
  distance=6pt,
  before={\blank[halfline]}%
]}{%
\setuphead [section][%
  style=\hfonti,
  before={\blank[line]},
  after={\blank[halfline]}%
]
\setuphead [subsection][%
  style=\hfontii,
  before={\blank[halfline]},
  after={}%
]
\setuphead [subsubsection][%
  style=\hfontiii,
  distance=6pt,
  alternative=text,
  before={\blank[halfline]}%
]}

\doifelsemode{nosubsub}{%
\setuphead [subject][%
  style=\hfontii,
  before={\blank[halfline]},
