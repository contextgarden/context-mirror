        \fi{#1}{\xmlattdef{#1}{delimiters}{brackets}}
    \else
        \cmd_column_one_start
            \ignorespaces
            \xmlflush{#1}
        \cmd_column_one_stop
        \godown[.75\lineheight]
        \ignorespaces
    \fi
\stopxmlsetups

\startxmlsetups xml:setups:parameter
